@model ViewModels.OrderHistoryViewModel


<h1>Historiek bestelling</h1>

@if (Model.Orders.Any())
{
@foreach (var item in Model.Orders)
{
<p>OrderID: @item.Id</p>
<p>Datum: @item.OrderPlaced</p> 
	foreach (var product in item.OrderLines)
	{
		<p>Product: @product.Product.Name</p>
		<p>Hoeveelheid: @product.Quantity</p>
	}
}
}
else { <p>Nog geen bestellingen...</p>}

